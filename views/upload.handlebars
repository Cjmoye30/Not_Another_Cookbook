{{!-- Form to upload recipe name and descrip --}}
<form class="form new-recipe-form">
    <div class="form-group">
        <label for="recipe-name">Recipe Name:</label>
        <input class="form-input" type="text" id="recipe_name" />
    </div>

    <div class="form-group">
        <label for="recipe-desc">Recipe Description:</label>
        <textarea class="form-input" id="recipe_desc"></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary newRecipeButton">Create</button>
    </div>
</form>

<hr>


